@page "/apphome"
@inject IJSRuntime JSRuntime

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<nav class="navbar navbar-expand-custom navbar-mainbg">
	<a class="navbar-brand navbar-logo" href="#">Pandharpur Wala</a>
	<button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<i class="fas fa-bars text-white"></i>
	</button>
	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav ml-auto">
			<div class="hori-selector"><div class="left"></div><div class="right"></div></div>
			<li class="nav-item active">
				<a class="nav-link" @onclick="ShowHome"><i class="fas fa-home-alt"></i>Home</a>
			</li>
			<li class="nav-item ">
				<a class="nav-link" @onclick="ShowTrack" ><i class="far fa fa-cab"></i>Track Your Ride</a>
			</li>
			@* <li class="nav-item">
				<a class="nav-link" @onclick="ShowContact"><i class="far fa-clone"></i>Components</a>
			</li> *@
			<li class="nav-item">
				<a class="nav-link" @onclick="ShowMap"><i class="far fa fa-map"></i>Our Service </a>
			</li>
			<li class="nav-item">
				<a class="nav-link" @onclick="ShowAbout"><i class="far fa fa-phone"></i>About Us</a>
			</li>

		</ul>
	</div>
</nav>
<!-- Content Sections -->
<div class="container mt-3">
	<!-- Home Section -->
	<div id="homeSection" style="display: @homeDisplay">
		<h3>Welcome to the Home Page!</h3>
		<p>This is the home section content.</p>
	</div>

	<!-- About Section -->
	<div id="aboutSection" style="display: @aboutDisplay">
		<h3>Welcome to the About Page!</h3>
		<p>This is the about section content.</p>
	</div>

	<!-- Contact Section -->
	<div id="contactSection" style="display: @contactDisplay">
		<h3>Welcome to the Contact Page!</h3>
		<p>This is the contact section content.</p>
	</div>
	<!-- Contact Section -->
	<div id="mapSection" style="display: @mapDisplay">
		<h3>Welcome to the map Page!</h3>
		<div class="map" id="contact">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3801.421816643028!2d75.33289107436423!3d17.67752268326002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc419ed7ca2b2f3%3A0x1b754d26342c6227!2sPandharpur%20vitthal%20mandir!5e0!3m2!1sen!2sin!4v1731764828419!5m2!1sen!2sin" width="900" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div>
	</div>
	<!-- Track Section -->
	<div id="trackSection" style="display: @trackDisplay">
		<h3>Welcome to the Track Page!</h3>
		<p>This is the Track section content.</p>
	</div>
</div>
<style>
	#homeSection, #aboutSection, #contactSection, #mapSection, #trackSection {
		padding: 15px;
		border: 1px solid #ccc;
		border-radius: 5px;
		margin-bottom: 15px;
	}

	@@import url('https://fonts.googleapis.com/css?family=Roboto');
	/* Your CSS styles */
	body {
		font-family: 'Roboto', sans-serif;
	}

	* {
		margin: 0;
		padding: 0;
	}

	/* i {
		margin-right: 20px;
		padding-right: 20px;
	} */

	/* Bootstrap Navbar Custom CSS */
	.navbar-logo {
		padding: 15px;
		color: #fff;
	}

	.navbar-mainbg {
		background-color: #5161ce;
		padding: 0px;
	}

	#navbarSupportedContent {
		overflow: hidden;
		position: relative;
	}

		#navbarSupportedContent ul {
			padding: 0px;
			margin: 0px;
		}

			#navbarSupportedContent ul li a i {
				margin-right: 10px;
			}

		#navbarSupportedContent li {
			list-style-type: none;
			float: left;
		}

		#navbarSupportedContent ul li a {
			color: rgba(255, 255, 255, 0.5);
			text-decoration: none;
			font-size: 15px;
			display: block;
			padding: 20px 20px;
			transition-duration: 0.6s;
			transition-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);
			position: relative;
		}

		#navbarSupportedContent > ul > li.active > a {
			color: #5161ce;
			background-color: transparent;
			transition: all 0.7s;
		}

		#navbarSupportedContent a:not(:only-child):after {
			content: "\f105";
			position: absolute;
			right: 20px;
			top: 10px;
			font-size: 14px;
			font-family: "Font Awesome 5 Free";
			display: inline-block;
			padding-right: 3px;
			vertical-align: middle;
			font-weight: 900;
			transition: 0.5s;
		}

		#navbarSupportedContent .active > a:not(:only-child):after {
			transform: rotate(90deg);
		}

	.hori-selector {
		display: inline-block;
		position: absolute;
		height: 100%;
		top: 0px;
		left: 0px;
		transition-duration: 0.6s;
		transition-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);
		background-color: #fff;
		border-top-left-radius: 15px;
		border-top-right-radius: 15px;
		margin-top: 10px;
	}

	@@media (min-width: 992px) {
		.navbar-expand-custom {
			flex-flow: row nowrap;
			justify-content: flex-start;
		}

			.navbar-expand-custom .navbar-nav {
				flex-direction: row;
			}

			.navbar-expand-custom .navbar-toggler {
				display: none;
			}

			.navbar-expand-custom .navbar-collapse {
				display: flex !important;
				flex-basis: auto;
			}
	}

	@@media (max-width: 991px) {
		#navbarSupportedContent ul li a {
			padding: 12px 30px;
		}

		.hori-selector {
			margin-top: 0px;
			margin-left: 10px;
			border-radius: 0;
			border-top-left-radius: 25px;
			border-bottom-left-radius: 25px;
		}

			.hori-selector .left,
			.hori-selector .right {
				right: 10px;
			}

			.hori-selector .left {
				top: -25px;
				left: auto;
			}

			.hori-selector .right {
				bottom: -25px;
			}

			.hori-selector .left:before {
				left: -25px;
				top: -25px;
			}

			.hori-selector .right:before {
				bottom: -25px;
				left: -25px;
			}
	}
</style>

@code {
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			// Call the JavaScript function defined in the HTML file
			await JSRuntime.InvokeVoidAsync("initializeNavbar");
		}
	}

	// Variables to control the visibility of each section
	private string homeDisplay = "block";  
	private string aboutDisplay = "none";   
	private string contactDisplay = "none";
	private string mapDisplay = "none"; 
	private string trackDisplay = "none"; 

	// Methods to toggle sections
	private void ShowHome()
	{
		homeDisplay = "block";
		aboutDisplay = "none";
		contactDisplay = "none";
		mapDisplay = "none";
		trackDisplay = "none";
	}

	private void ShowAbout()
	{
		homeDisplay = "none";
		aboutDisplay = "block";
		contactDisplay = "none";
		mapDisplay = "none";
		trackDisplay = "none";
	}

	private void ShowContact()
	{
		homeDisplay = "none";
		aboutDisplay = "none";
		mapDisplay = "none";
		contactDisplay = "block";
		trackDisplay = "none";
	}
	private void ShowMap()
	{
		homeDisplay = "none";
		aboutDisplay = "none";
		contactDisplay = "none";
		mapDisplay  = "block";
		trackDisplay = "none";
	}
	private void ShowTrack()
	{
		homeDisplay = "none";
		aboutDisplay = "none";
		contactDisplay = "none";
		mapDisplay = "none";
		trackDisplay = "block";
	}
	
}