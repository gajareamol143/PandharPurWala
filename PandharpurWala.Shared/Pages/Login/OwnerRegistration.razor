@page "/owner-registration"

<h3>Owner Registration</h3>

<EditForm Model="@ownerModel" OnValidSubmit="HandleOwnerRegistration">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name">Owner Name:</label>
        <InputText id="name" class="form-control" @bind-Value="ownerModel.Name" />
    </div>
    <div class="mb-3">
        <label for="email">Owner Email:</label>
        <InputText id="email" class="form-control" @bind-Value="ownerModel.Email" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

@code {
    private OwnerModel ownerModel = new();

    private void HandleOwnerRegistration()
    {
        Console.WriteLine($"Owner Registered: {ownerModel.Name}");
    }

    public class OwnerModel
    {
        public string Name { get; set; }
        public string Email { get; set; }
    }
}
